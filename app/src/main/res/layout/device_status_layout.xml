<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/device_status_view_margin">

    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_disconnected"
            android:id="@+id/icon"
        android:gravity="center_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnected"
            android:id="@+id/text"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/device_status_view_margin"
            android:layout_marginLeft="@dimen/device_status_view_margin" />
</LinearLayout>
